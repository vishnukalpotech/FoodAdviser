<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A996CB"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.foodadviser.Register" >
    <EditText
        android:id="@+id/et_reg_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"
        android:ems="10"
        android:hint="Name"
        
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/et_reg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_reg_name"
        android:layout_below="@+id/et_reg_name"
        android:layout_marginTop="17dp"
        android:ems="10"
      	android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />

    <EditText
        android:id="@+id/et_reg_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_reg_email"
        android:layout_below="@+id/et_reg_email"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff" />


 
    <Button
        android:id="@+id/btn_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_reg_password"
        android:layout_alignRight="@+id/et_reg_password"
        android:layout_below="@+id/et_reg_password"
        android:layout_marginTop="97dp"
        android:background="@drawable/btn"
        android:text="Sign Up"
        android:textColor="#ffffff" />

<RadioGroup
    android:id="@+id/radiouser"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/et_reg_name"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="35dp"
    android:layout_marginTop="15dp" >

    <RadioButton
        android:id="@+id/rb_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:text="Restaurant"
        android:textColor="#ffffff"
        android:textStyle="italic" />

    <RadioButton
        android:id="@+id/rb_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="User"
        android:textColor="#ffffff"
        android:textStyle="italic" />
</RadioGroup>



</RelativeLayout>