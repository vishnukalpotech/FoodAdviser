<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7D64AA"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.foodadviser.FoodDetails" >

    <ImageView
        android:id="@+id/iv_fooddetails_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_fooddetails_name"
        android:layout_marginBottom="309dp"
        android:layout_marginLeft="66dp"
        android:layout_marginRight="25dp"
        android:layout_toRightOf="@+id/tv_fooddetails_type"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_fooddetails_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentTop="true"
        android:layout_marginTop="94dp"
        android:text="Name"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_fooddetails_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tv_fooddetails_name"
        android:layout_marginTop="18dp"
        android:text="Medium Text"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tv_fooddetails_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fooddetails_type"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/imageView1"
        android:text="Medium Text"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btn_fooddetails_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/btn"
        android:text="@string/back"
        android:textColor="#ffffff"
        android:textSize="20dp"/>

    <RatingBar
        android:id="@+id/rBar_fooditem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/iv_fooddetails_image"
        android:layout_below="@+id/tv_fooddetails_details"
        android:layout_marginTop="27dp" />

    <ListView
        android:id="@+id/lv_food_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_fooddetails_details"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rBar_fooditem"
        android:layout_marginRight="17dp"
        android:layout_marginTop="26dp"
        android:layout_toLeftOf="@+id/btn_fooddetails_comment" >

    </ListView>

    <EditText
        android:id="@+id/et_food_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_fooddetails_comment"
        android:layout_below="@+id/rBar_fooditem"
        android:background="#ffffff"
        android:ems="10"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btn_fooddetails_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      
        android:layout_alignLeft="@+id/iv_fooddetails_image"
       
        android:layout_marginBottom="97dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/btn"
        android:text="Comment"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_food_comment"
        android:layout_alignBottom="@+id/et_food_comment"
        android:layout_alignParentLeft="true"
        android:text="Comments"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceMedium" />
   
</RelativeLayout>
