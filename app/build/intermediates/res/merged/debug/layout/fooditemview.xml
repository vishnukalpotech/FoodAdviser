<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_fdetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_ftype"
        android:layout_below="@+id/tv_ftype"
        android:layout_marginTop="25dp"
        android:text="Food details"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
         android:textSize="18dp"
         android:gravity="center_vertical|left"
          />

    <TextView
        android:id="@+id/tv_ftype"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/tv_fname"
        android:layout_below="@+id/tv_fname"
        android:layout_marginTop="25dp"
        android:text="Food Type"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textSize="18dp"
        android:gravity="center_vertical|left"
         />"

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_fdetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn"
        android:text="Ok" />

    <TextView
        android:id="@+id/tv_fname"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical|left"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="25dp" />

</RelativeLayout>